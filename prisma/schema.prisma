// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String
  active   Boolean @default(true)

  @@map("users")
}

model Project {
  id          Int    @id @default(autoincrement())
  linkgit     String
  descproject String @db.Text
  url         String
  desc        String @db.Text
  title       String @unique
  body        String @db.Text
  slug        String @unique
  linkproject String @unique

  @@map("projects")
}

model Post {
  id         Int      @id @default(autoincrement())
  title      String
  slug       String   @unique
  content    String   @db.Text
  url        String
  date       DateTime @default(now())
  author     String
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  @@map("posts")
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  posts Post[]

  @@map("categorys")
}
